resource "aws_opensearch_domain" "iac-aws-elasticsearch" {
  domain_name    = "iac-aws-elasticsearch"
  engine_version = "OpenSearch_2.11"

  cluster_config {
    instance_type = "t3.small.search"
  }

  ebs_options {
    ebs_enabled = true
    volume_size = 10
    volume_type = "gp3"
  }

  node_to_node_encryption {
    enabled = true
  }

  domain_endpoint_options {
    enforce_https       = true
  }

  encrypt_at_rest {
    enabled = true
  }

  tags = {
    Domain = "iac-aws-elasticsearch"
  }
}